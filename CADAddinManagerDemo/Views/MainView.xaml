<Window
    x:Class="CADAddinManagerDemo.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:CADAddinManagerDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add-in Manager By FT"
    Width="560"
    Height="520"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel>
        <TreeView
            Name="CommandTreeView"
            Height="250"
            Margin="10"
            BorderBrush="Black"
            ItemsSource="{Binding Commands}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate
                        ItemsSource="{Binding CommandMethodNames}">
                    <TextBlock Text="{Binding Name}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="120" />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock
                    Margin="10,5,5,0"
                    FontSize=" 15"
                    Text="Name:" />
                <TextBox
                    Height="20"
                    Margin="10,5,5,0"
                    IsReadOnly="True" />
                <TextBlock
                    Margin="10,5,5,0"
                    FontSize=" 15"
                    Text="Description:" />
                <TextBox
                    Height="50"
                    Margin="10,5,5,0"
                    IsReadOnly="True" />
                <TextBlock
                    Margin="10,5,5,0"
                    FontSize=" 15"
                    Text="Notes:" />
                <TextBox
                    Height="20"
                    Margin="10,5,5,0"
                    IsReadOnly="True"
                    Text="{Binding AddInOriginalPath}" />
            </StackPanel>
            <StackPanel Grid.Column="1" Width="120">
                <Button
                    Width="100"
                    Height="40"
                    Margin="5,10,5,5"
                    Content="Run"
                    FontSize="16" />
                <Button
                    Width="100"
                    Height="40"
                    Margin="5"
                    Command="{Binding LoadAddinCommand}"
                    Content="Load"
                    FontSize="16" />
                <Button
                    Width="100"
                    Height="40"
                    Margin="5"
                    Content="Remove"
                    FontSize="16" />
                <Button
                    Width="100"
                    Height="40"
                    Margin="5"
                    Content="Save"
                    FontSize="16" />
            </StackPanel>
        </Grid>


    </StackPanel>
</Window>
